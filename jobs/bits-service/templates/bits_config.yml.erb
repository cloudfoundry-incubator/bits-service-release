  blobstore_type: <%= p("bits-service.packages.blobstore_type") %>
  webdav_config:
    public_endpoint: <%= p("bits-service.packages.webdav_config.public_endpoint") %>
    private_endpoint: <%= p("bits-service.packages.webdav_config.private_endpoint") %>
